{% extends 'home.html.twig' %}
{% block content %}
<div class="clearfix"></div>
<div class="col-md-12 col-sm-12  ">
    <div class="x_panel">
        <div class="x_title">
            <h2>List Des Employés <small> </small></h2>
            <ul class="nav navbar-right panel_toolbox">
                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="#">Settings 1</a>
                        <a class="dropdown-item" href="#">Settings 2</a>
                    </div>
                </li>
                <li><a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="table-responsive">
                <table class="table table-striped jambo_table bulk_action">
                    <thead>
                    <tr class="headings">
                        <th class="column-title">Nom et Prénom</th>
                        <th class="column-title">E mail </th>
                        <th class="column-title">Fontion</th>
                        <th class="column-title">Statut</th>
                        <th class="column-title">date d'entrée</th>
                        <th class="column-title">Type de contrat de travail </th>
                        <th class="column-title no-link last"><span class="nobr">Modifier un employeur</span>
                        </th>
                        <th class="bulk-actions" colspan="7">
                            <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if users %}
                    {% for user in users %}
                    <tr class="even pointer">
                        <td class="">{{ user.lastname }} {{ user.firstname }}</td>
                        <td class="">{{ user.email  }}</td>
                        <td class="">{{ user.fonction }}</td>
                        <td class="">{{ user.profile.status }}</td>
                        <td class="">{{ user.profile.joindate }}</td>
                        <td class="">{{ user.profile.contracttype }}</td>
                        <td class="last"><a href="{{ path('profilecomplet',{'id':user.profile.id}) }}"><button type="button" class="btn btn-sm btn-round btn-success">Modifier</button></a></td>
                    </tr>
                    {% endfor %}
                    {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}

