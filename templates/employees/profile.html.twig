{% extends 'home.html.twig' %}
{% block content %}
    <div class="" role="main">
    <div class="">
    <div class="page-title">
        <div class="title_right">
            <div class="col-md-5 col-sm-5 form-group pull-right top_search">
                <div class="input-group">
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
    <div class="col-md-12 col-sm-12">
    <div class="x_panel">
    <div class="x_title">
        <h2>Nouvelle Personne</h2>
        <ul class="nav navbar-right panel_toolbox">
        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        {{ form_start(registrationForm) }}
    <form class="" action="" method="post" novalidate>
    <div class="field item form-group">
        <label class="col-form-label col-md-3 col-sm-3  label-align">Grade</label>
        <div class="col-md-2 col-sm-3">

            <input class="form-control" type="number" {{ form_widget(registrationForm.currentrank) }}
        </div>
        <label class="col-form-label col-md-1 col-sm-1  label-align">Contract</label>
        <div class="col-md-3 col-sm-1">
            <input type="text" class="form-control"{{ form_widget(registrationForm.contracttype) }}
        </div>
    </div>

    <div class="field item form-group">
        <label class="col-form-label col-md-3 col-sm-3  label-align">Statut</label>
        <div class="col-md-6 col-sm-6">
            <input type="text" class="form-control"{{ form_widget(registrationForm.status) }}
        </div>
    </div>
    <div class="field item form-group">
        <label class="col-form-label col-md-3 col-sm-3  label-align">Date de naissance</label>
        <div class="col-md-6 col-sm-6">
            <input class="form-control" class='optional' type="text"{{ form_widget(registrationForm.dateofbirth) }}
        </div>
    </div>
    <div class="field item form-group">
        <label class="col-form-label col-md-3 col-sm-3  label-align">Code postale</label>
        <div class="col-md-6 col-sm-6">
            <input class="form-control" type="number" {{ form_widget(registrationForm.countrycode) }}
        </div>
    </div>
    <div class="field item form-group">
        <label class="col-form-label col-md-3 col-sm-3  label-align">Numero du fichier médicale</label>
        <div class="col-md-6 col-sm-6">
            <input class="form-control" type="number" {{ form_widget(registrationForm.medicalfilenumber) }}
        </div>
    </div>
        <div class="field item form-group">
            <label class="col-form-label col-md-3 col-sm-3  label-align">Début du contrat de travail</label>
            <div class="col-md-6 col-sm-6">
                <input class="form-control" type="text" {{ form_widget(registrationForm.joindate) }}
            </div>
        </div>
        <div class="field item form-group">
            <label class="col-form-label col-md-3 col-sm-3  label-align">Adresse D'employeur</label>
            <div class="col-md-6 col-sm-6">
                <input type="text" class="form-control" {{ form_widget(registrationForm.adresse) }}
            </div>
        </div>
        <div class="field item form-group">
            <label class="col-form-label col-md-3 col-sm-3  label-align">Numero de telephone</label>
            <div class="col-md-6 col-sm-6">
                <input class="form-control" type="password" {{ form_widget(registrationForm.telephone) }}
        </div>
        </div>
        <div class="field item form-group">
            <label class="col-form-label col-md-3 col-sm-3  label-align">Supérieur hiérarchique</label>
            <div class="col-md-6 col-sm-6">
                <input class="form-control" type="password" {{ form_widget(registrationForm.upperhierarchy) }}
            </div>
        </div>
    <div class="ln_solid">
        <div class="form-group">
            <div class="col-md-6 offset-md-3">
                <button type="submit" class="btn btn-success">Register</button>
                <button type='reset' class="btn btn-success">Reset</button>
            </div>
        </div>
    </div>
</form>
{{ form_end(registrationForm) }}
</div>
</div>
</div>
</div>
</div>
</div>
{% endblock %}