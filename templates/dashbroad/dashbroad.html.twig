{% extends 'home.html.twig' %}
{% block content %}
    <div class="tile_count">
        <div class="col-md-2 col-sm-4  tile_stats_count">
            <span class="count_top"><i class="fa fa-user"></i> Total D'employés</span>
            <div class="count"> 300 </div>
        </div>
        <div class="col-md-2 col-sm-4  tile_stats_count">
            <span class="count_top"><i class="fa fa-user"></i> Total Hommes </span>
            <div class="count"> 180 </div>
        </div>
        <div class="col-md-2 col-sm-4  tile_stats_count">
            <span class="count_top"><i class="fa fa-user"></i> Total Femmes</span>
            <div class="count"> 120 </div>
        </div>
    </div>
    <div class="x_panel">
                <div class="x_title">
                    <h2>List Des Employés</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card-box table-responsive">
                                <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                    <thead>
                                    <tr>
                                        <th width="10%" >Profil</th>
                                        <th>Numéro d'employeur</th>
                                        <th>Nom et Prénom</th>
                                        <th>E mail</th>
                                        <th>Fontion</th>
                                        <th>Role</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for user in users %}
                                    <tr>
                                        <td><img src="../photo profile/{{ user.avatar }}"></td>
                                        <td>{{ user.employernumber }}</td>
                                        <td>{{ user.firstname }} {{ user.lastname }}</td>
                                        <td>{{ user.email  }}</td>
                                        <td>{{ user.fonction  }}</td>
                                        <td>{% if user.fonction  == 'Employé RH' %} ADMIN {% else %}USER{% endif %}</td>
                                    </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    <style>
        img {
            width: 30%;
            height: auto;
            border-radius: 50%;
        }
    </style>
      {% endblock %}

